{
    "manifest_version": 3,
    "name": "Lecture Transcriber",
    "version": "1.0",
    "description": "Transcribes and summarizes lecture audio",
    "permissions": ["storage", "activeTab", "downloads"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }